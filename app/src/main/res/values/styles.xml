<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="tences_style">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="verbconjugation_style">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="verbconjugation_pronuns_style">
        <item name="android:textSize">19sp</item>
        <item name="android:color">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="verbconjugation_auxverbi_style">
        <item name="android:textSize">19sp</item>
        <item name="android:color">#333333</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="verbconjugation_verb_style">
        <item name="android:textSize">19sp</item>
        <item name="android:color">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
</resources>
